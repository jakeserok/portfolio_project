<h1>Portfolio Items</h1>

<%= link_to "New Portfolio Item", new_portfolio_path %>

<% @portfolio_items.each do |p| %>
  <p><%= p.title %></p>
  <p><%= p.subtitle %></p>
  <p><%= p.body %></p>
  <%= image_tag p.thumb_image unless p.thumb_image.nil? %>
  <br>
  <%= link_to "Edit", edit_portfolio_path(p.id) %>
<% end %>